     targetLanguageSuffix <- targetLanguage

0a-dev.tokenize-f: ON localhost machine-translation/descriptors/joshua/TokenizerJoshua.py
   numSplitPieces=1

   FROM 0a-dev.corp
     inputCorpus < corpus.f
     targetLanguageSuffix <- sourceLanguage

