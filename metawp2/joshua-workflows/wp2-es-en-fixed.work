6-Test2008.830-detokenize: ON localhost machine-translation/descriptors/joshua/DetokenizerJoshua.py

   FROM 6-Test2008.820-striptags
     recasedOutput < corpusOut

   FROM FS-languagepair
     targetLanguageSuffix <- target-language

6-Test2008.840-bleu: ON localhost machine-translation/descriptors/metrics/MultiBleu.py

   FROM 6-Test2008.830-detokenize
     hyps < detokenizedOutput

   FROM 0d-test2008.ref
     refs < corpus

6-Test2008.extract-grammar: ON localhost machine-translation/descriptors/joshua/GrammarExtractorJoshua.py
   JVMOptions=-Xmx32G

   FROM 3-BuildTM.400-build-suffix-array-for-tm
     commonSymbolTable < commonSymbolTable
     foreignBinaryCorpus < foreignBinaryCorpus
     foreignSuffixArray < foreignSuffixArray
     englishBinaryCorpus < englishBinaryCorpus
     englishSuffixArray < englishSuffixArray
     frequentPhrases < frequentPhrases
     alignmentGrids < alignmentGrids
     lexprobs < lexprobs

   FROM 0d-test2008.lowercase
     fDevSents < normalizedCorpus


